<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:background="@drawable/bg_gradient_main"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/app_name"

        android:textColor="#FFFFFF"
        android:textSize="30sp" />


    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:background="@drawable/bg_gradient_inv"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/username"
            android:fontFamily="@font/bebas_neue"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:id="@+id/user"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:backgroundTint="#3A3939"
            android:hint="@string/username"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/password"
            android:fontFamily="@font/bebas_neue"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginTop="130dp"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:hint="@string/password"
            android:textColor="#FFFFFF"
            android:backgroundTint="#050505"
            android:textSize="15dp"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:layout_marginTop="175dp"
            />


    </FrameLayout>
    <TextView
        android:id="@+id/errorform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/errorform"
        android:textColor="#FF1100"
        android:textSize="10dp"
        android:clickable="false"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="615dp"
        />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="310dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/bebas_neue"
        android:textSize="18dp"
        app:backgroundTint="#000000"
        android:layout_marginTop="630dp"

        />
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="#FEF800"
        android:textSize="10dp"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="665dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="695dp"
        android:layout_marginRight="20dp"
        android:text="No tienes cuenta?"
        android:textColor="#38392D"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="#FEF800"
        android:textSize="10dp"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="695dp"
        android:layout_marginLeft="50dp"
        />

</FrameLayout>